<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:measureWithLargestChild="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.returnnull.rukhedarae.TortureType">



<TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:textSize="30sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textviewQuestion"
                android:textStyle="bold"
                android:text="Question"
    android:textColor="#000000"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="84dp"
    android:layout_marginBottom="100dp" />




            <Button
                android:id="@+id/buttonA"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Button"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:onClick="onClickA"
                android:layout_below="@+id/textviewQuestion"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/buttonB"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Button"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:onClick="onClickB"
                android:layout_below="@+id/textviewQuestion"
                android:layout_toRightOf="@+id/buttonA"
                android:layout_toEndOf="@+id/buttonA"
                android:layout_margin="12dp" />





            <Button
                android:id="@+id/buttonC"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Button"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:onClick="onClickC"
                android:layout_below="@+id/buttonA"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/buttonD"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Button"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:onClick="onClickD"
                android:layout_below="@+id/buttonB"
                android:layout_toRightOf="@+id/buttonC"
                android:layout_toEndOf="@+id/buttonC"
                android:layout_margin="12dp" />

</RelativeLayout>
